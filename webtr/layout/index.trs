// WebTR Layout System
// Hızlı ve esnek dizilim yardımcıları

// Değişkenler
$layout-gap-1 = 4px
$layout-gap-2 = 8px
$layout-gap-3 = 16px
$layout-gap-4 = 24px
$layout-gap-5 = 32px

// Container
.container {
  width: 100%
  margin-right: auto
  margin-left: auto
  padding-right: 15px
  padding-left: 15px
}

.container-fluid {
  width: 100%
  padding-right: 15px
  padding-left: 15px
}

// Media Queries for Container
@media (min-width: 576px) {
  .container { max-width: 540px }
}
@media (min-width: 768px) {
  .container { max-width: 720px }
}
@media (min-width: 992px) {
  .container { max-width: 960px }
}
@media (min-width: 1200px) {
  .container { max-width: 1140px }
}

// Flexbox Temelleri
.row {
  display: flex
  flex-wrap: wrap
  margin-right: -15px
  margin-left: -15px
}

.col {
  flex-basis: 0
  flex-grow: 1
  max-width: 100%
  position: relative
  width: 100%
  padding-right: 15px
  padding-left: 15px
}

// Grid Columns (12-column system)
.col-1 { flex: 0 0 8.33%; max-width: 8.33% }
.col-2 { flex: 0 0 16.66%; max-width: 16.66% }
.col-3 { flex: 0 0 25%; max-width: 25% }
.col-4 { flex: 0 0 33.33%; max-width: 33.33% }
.col-5 { flex: 0 0 41.66%; max-width: 41.66% }
.col-6 { flex: 0 0 50%; max-width: 50% }
.col-7 { flex: 0 0 58.33%; max-width: 58.33% }
.col-8 { flex: 0 0 66.66%; max-width: 66.66% }
.col-9 { flex: 0 0 75%; max-width: 75% }
.col-10 { flex: 0 0 83.33%; max-width: 83.33% }
.col-11 { flex: 0 0 91.66%; max-width: 91.66% }
.col-12 { flex: 0 0 100%; max-width: 100% }

// Utility Classes
.flex { display: flex }
.inline-flex { display: inline-flex }
.wrap { flex-wrap: wrap }

// Hizalama
.center {
  display: flex
  align-items: center
  justify-content: center
}

.items-center { align-items: center }
.items-start { align-items: flex-start }
.items-end { align-items: flex-end }

.justify-center { justify-content: center }
.justify-between { justify-content: space-between }
.justify-around { justify-content: space-around }
.justify-start { justify-content: flex-start }
.justify-end { justify-content: flex-end }

// Boşluklar (Gaps)
.gap-1 { gap: $layout-gap-1 }
.gap-2 { gap: $layout-gap-2 }
.gap-3 { gap: $layout-gap-3 }
.gap-4 { gap: $layout-gap-4 }
.gap-5 { gap: $layout-gap-5 }

// Width & Height
.w-full { width: 100% }
.h-full { height: 100% }
.w-screen { width: 100vw }
.h-screen { height: 100vh }

// Padding & Margin (Temel set)
.p-1 { padding: $layout-gap-1 }
.p-2 { padding: $layout-gap-2 }
.p-3 { padding: $layout-gap-3 }
.m-1 { margin: $layout-gap-1 }
.m-2 { margin: $layout-gap-2 }
.m-3 { margin: $layout-gap-3 }

// Grid (Native CSS Grid)
.grid {
  display: grid
  grid-template-columns: repeat(12, 1fr)
  gap: $layout-gap-3
}

.grid-2 {
  display: grid
  grid-template-columns: repeat(2, 1fr)
  gap: $layout-gap-3
}

.grid-3 {
  display: grid
  grid-template-columns: repeat(3, 1fr)
  gap: $layout-gap-3
}
