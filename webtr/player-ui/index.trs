// WebTR Player UI Kit
// Modern video oynatıcı stilleri

$player-primary = #e30a17
$player-bg = rgba(0, 0, 0, 0.8)
$player-text = #ffffff

// Temel Konteyner
.player-container {
  position: relative
  width: 100%
  aspect-ratio: 16 / 9
  background: black
  overflow: hidden
  border-radius: 12px
  box-shadow: 0 10px 30px rgba(0,0,0,0.5)
}

.player-video {
  width: 100%
  height: 100%
  object-fit: cover
}

// Kontrol Barı (Modern)
.player-controls {
  position: absolute
  bottom: 0
  left: 0
  width: 100%
  padding: 20px
  background: linear-gradient(to top, rgba(0,0,0,0.9), transparent)
  display: flex
  align-items: center
  gap: 15px
  opacity: 0
  transition: opacity 0.3s
}

.player-container:hover .player-controls {
  opacity: 1
}

// Butonlar
.control-btn {
  background: none
  border: none
  color: $player-text
  font-size: 1.2rem
  cursor: pointer
  opacity: 0.8
  transition: all 0.2s
}

.control-btn:hover {
  opacity: 1
  transform: scale(1.1)
  color: $player-primary
}

// İlerleme Çubuğu
.progress-bar-container {
  flex-grow: 1
  height: 5px
  background: rgba(255,255,255,0.2)
  border-radius: 5px
  cursor: pointer
  position: relative
}

.progress-bar-fill {
  height: 100%
  background: $player-primary
  width: 0%
  border-radius: 5px
  position: relative
}

.progress-bar-fill::after {
  content: ""
  position: absolute
  right: -6px
  top: 50%
  transform: translateY(-50%)
  width: 12px
  height: 12px
  background: white
  border-radius: 50%
  box-shadow: 0 0 10px rgba(0,0,0,0.5)
  opacity: 0
  transition: opacity 0.2s
}

.progress-bar-container:hover .progress-bar-fill::after {
  opacity: 1
}

// Neon Tema Varyasyonu
.player-neon .player-controls {
  background: rgba(10, 10, 20, 0.9)
  border-top: 1px solid #00ffcc
  box-shadow: 0 0 20px rgba(0, 255, 204, 0.2)
}

.player-neon .control-btn {
  color: #00ffcc
  text-shadow: 0 0 5px rgba(0, 255, 204, 0.5)
}

.player-neon .progress-bar-fill {
  background: #00ffcc
  box-shadow: 0 0 10px #00ffcc
}

// Büyük Oynat Butonu (Overlay)
.play-overlay-btn {
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  width: 80px
  height: 80px
  background: rgba(227, 10, 23, 0.9)
  border-radius: 50%
  display: flex
  align-items: center
  justify-content: center
  color: white
  font-size: 2.5rem
  cursor: pointer
  transition: all 0.3s
  backdrop-filter: blur(5px)
}

.play-overlay-btn:hover {
  transform: translate(-50%, -50%) scale(1.1)
  background: #ff1f1f
}
